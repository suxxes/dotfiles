[init]
	defaultBranch = main
[core]
	excludesfile = ~/.gitignore
	editor = nano
	filemode = false
	quotepath = false
	autocrlf = input
[diff]
	colorMoved = default
[merge]
	conflictstyle = diff3
[rerere]
	enabled = true
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[pull]
	rebase = false
[gpg]
	format = ssh
[gpg "ssh"]
# {{ if eq .osType "darwin" }}
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
# {{ end }}
	allowedSignersFile = ~/.ssh/allowed_signers
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[push]
	autoSetupRemote = true
